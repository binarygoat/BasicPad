<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoViewerActivity" 
    android:orientation="vertical"
    style="@style/activity_light"
    >
	
    <EditText 
	    android:id="@+id/photoViewer_titleText"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:inputType="text"
	    style="@style/EditText"
	    />
    
    <ImageView 
        android:id="@+id/photoViewer_photo"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
    	android:layout_weight="1"
        android:src="@drawable/icon_green"
        android:contentDescription="@string/title_activity_photo"
        
		/>
    
</LinearLayout>