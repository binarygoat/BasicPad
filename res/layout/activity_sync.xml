<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SyncActivity" 
    style="@style/activity_dark"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_usernameLabel" 
	        style="@style/text_dark"
	        />
	    
	    <EditText 
	        android:id="@+id/sync_email"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textEmailAddress"
	        style="@style/EditText"
	        />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_passwordLabel" 
	        style="@style/text_dark"
	        />
	    
	    <EditText 
	        android:id="@+id/sync_password"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword"
	        style="@style/EditText"
	        />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_deviceNameLabel" 
	        style="@style/text_dark"
	        />
	    
	    <EditText 
	        android:id="@+id/sync_deviceName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        style="@style/EditText"
	        />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_optionsLabel" 
	        style="@style/text_dark"
	        />
	    
	    <TextView
	        android:id="@+id/sync_errorOptions"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/required"
	        android:visibility="invisible"
	        style="@style/text_error"
	        />
	    
	    <RadioGroup 
	        android:id="@+id/sync_options"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	        
	        <RadioButton 
	            android:id="@+id/sync_radioPhotos"
	        	android:text="@string/sync_radioPhotosLabel"
	        	style="@style/checkbox_dark"
	            />
	        
	        <RadioButton 
	            android:id="@+id/sync_radiotextOnly"
	            android:text="@string/sync_textOnlyLabel"
	        	style="@style/checkbox_dark"
	        	/>
	        
	    </RadioGroup>
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_checkLabel" 
	        style="@style/text_dark"
	        />
	    
	    <TextView
	        android:id="@+id/sync_errorCheckPlainText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/required"
	        android:visibility="invisible"
	        style="@style/text_error"
	        />
	    
	    <CheckBox 
	        android:id="@+id/sync_checkPlainText"
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sync_checkAgreeLabel"
	        style="@style/checkbox_dark"
	        />
	    
	    <Button 
	        android:id="@+id/sync_submitButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/continue_button"
	        />
	</LinearLayout>
</ScrollView>